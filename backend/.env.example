# Environment Configuration for Backend
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Neon PostgreSQL)
# Get this from your Neon dashboard: https://neon.tech
# Format: postgresql://username:password@hostname:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# JWT Configuration
# Generate a strong secret key for JWT tokens
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
# Frontend URL for CORS policy
FRONTEND_URL=http://localhost:3000

# Security Configuration
# Number of bcrypt salt rounds for password hashing
BCRYPT_ROUNDS=10

# Rate Limiting Configuration
# Time window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Database Pool Configuration (Optional)
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Email Configuration (Optional - for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# File Upload Configuration (Optional - for future features)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# Production Settings (Uncomment and modify for production)
# NODE_ENV=production
# DATABASE_URL=your_production_database_url
# JWT_SECRET=your_production_jwt_secret_64_characters_long
# FRONTEND_URL=https://your-frontend-domain.vercel.app
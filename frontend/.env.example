# Environment Configuration for Frontend
# Copy this file to .env and fill in your actual values

# Backend API Configuration
# URL of your backend server (without trailing slash)
REACT_APP_API_URL=http://localhost:5000/api

# Application Configuration
# Name of your application (displayed in browser title)
REACT_APP_NAME=Online Teaching ERP

# Application version
REACT_APP_VERSION=1.0.0

# Environment mode
NODE_ENV=development

# Build Configuration (Optional)
# Generate source maps for debugging in development
GENERATE_SOURCEMAP=true

# Bundle analyzer (Optional)
# Set to true to analyze bundle size
# ANALYZE_BUNDLE=false

# Performance Configuration (Optional)
# Maximum bundle size warning threshold
# REACT_APP_MAX_BUNDLE_SIZE=500

# Feature Flags (Optional - for future features)
# Enable/disable specific features
# REACT_APP_ENABLE_NOTIFICATIONS=true
# REACT_APP_ENABLE_DARK_MODE=false
# REACT_APP_ENABLE_CHAT=false

# Third-party Service Configuration (Optional - for future integrations)
# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry error tracking DSN
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Firebase configuration (for future features)
# REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
# REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# REACT_APP_FIREBASE_PROJECT_ID=your-project-id

# WebSocket Configuration (Optional - for future real-time features)
# REACT_APP_WS_URL=ws://localhost:5000

# CDN Configuration (Optional)
# Base URL for static assets
# REACT_APP_CDN_URL=https://cdn.yoursite.com

# API Configuration (Optional)
# Request timeout in milliseconds
# REACT_APP_API_TIMEOUT=30000

# Enable/disable API request logging
# REACT_APP_LOG_API_REQUESTS=true

# Production Settings (Use these for production deployment)
# NODE_ENV=production
# REACT_APP_API_URL=https://your-backend-api.render.com/api
# GENERATE_SOURCEMAP=false
# REACT_APP_GA_TRACKING_ID=your-production-ga-id

# Vercel Deployment Configuration
# These are automatically set by Vercel, but you can override them
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production